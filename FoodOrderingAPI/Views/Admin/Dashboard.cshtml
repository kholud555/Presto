</nav>

<div class="container-fluid mt-4 px-4">
    <h1 class="mb-4 fw-bold">@ViewData["Title"]</h1>
    <div class="row gx-4">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-none d-md-block sidebar shadow-sm">
            <ul class="nav nav-pills flex-column" id="dashboardTabs" role="tablist" aria-orientation="vertical">
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "admin" ? "active" : "")" id="admin-tab" data-bs-toggle="pill" data-bs-target="#admin"
                            type="button" role="tab" aria-controls="admin" aria-selected="@(activeTab == "admin" ? "true" : "false")">
                        <i class="bi bi-shield-lock me-2"></i> Admin Control
                    </button>
                </li>
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "restaurant" ? "active" : "")" id="restaurant-tab" data-bs-toggle="pill" data-bs-target="#restaurant"
                            type="button" role="tab" aria-controls="restaurant" aria-selected="@(activeTab == "restaurant" ? "true" : "false")">
                        <i class="bi bi-shop me-2"></i> Restaurant Control
                    </button>
                </li>
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "customer" ? "active" : "")" id="customer-tab" data-bs-toggle="pill" data-bs-target="#customer"
                            type="button" role="tab" aria-controls="customer" aria-selected="@(activeTab == "customer" ? "true" : "false")">
                        <i class="bi bi-people me-2"></i> Customer Control
                    </button>
                </li>
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "orders" ? "active" : "")" id="orders-tab" data-bs-toggle="pill" data-bs-target="#orders"
                            type="button" role="tab" aria-controls="orders" aria-selected="@(activeTab == "orders" ? "true" : "false")">
                        <i class="bi bi-basket me-2"></i> Orders Control
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "deliveryman" ? "active" : "")" id="deliveryman-tab" data-bs-toggle="pill" data-bs-target="#deliveryman"
                            type="button" role="tab" aria-controls="deliveryman" aria-selected="@(activeTab == "deliveryman" ? "true" : "false")">
                        <i class="bi bi-truck me-2"></i> Delivery Man Control
                    </button>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 col-lg-10">
            <div class="tab-content" id="dashboardTabsContent">
                <!-- Admin tab -->
                <div class="tab-pane fade @(activeTab == "admin" ? "show active" : "")" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Admins</h5>
                        </div>
                        <div class="card-body p-2">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var admin in Model.Admins)
                                        {
                                            <tr>
                                                <td>@admin.User.UserName</td>
                                                <td>@admin.User.Email</td>
                                                <td>@admin.User.PhoneNumber</td>
                                                <td class="text-center">
                                                    <a asp-action="EditAdmin" asp-route-userId="@admin.User.UserName" class="btn btn-primary btn-sm" title="Update Admin">
                                                        <i class="bi bi-pencil-square"></i> Update
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Restaurant tab -->
                <div class="tab-pane fade @(activeTab == "restaurant" ? "show active" : "")" id="restaurant" role="tabpanel" aria-labelledby="restaurant-tab">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Active Restaurants</h5>
                        </div>
                        <div class="card-body p-2">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Name</th>
                                            <th>Location</th>
                                            <th>Open Hours</th>
                                            <th>Delivery Price</th>
                                            <th>Order Time</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var rest in Model.ActiveRestaurants)
                                        {
                                            <tr>
                                                <td>@rest.RestaurantName</td>
                                                <td>@rest.Location</td>
                                                <td>@rest.OpenHours</td>
                                                <td>@rest.DelivaryPrice.ToString("C")</td>
                                                <td>@rest.orderTime</td>
                                                <td class="text-center">
                                                    <form asp-action="DeactivateRestaurant" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@rest.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="restaurant" />
                                                        <button class="btn btn-warning btn-sm me-1" type="submit" title="Deactivate">
                                                            <i class="bi bi-x-circle"></i> Deactivate
                                                        </button>
                                                    </form>
                                                    <form asp-action="DeleteRestaurant" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@rest.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="restaurant" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="card-title mb-0">Inactive Restaurants</h5>
                        </div>
                        <div class="card-body p-2">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Name</th>
                                            <th>Location</th>
                                            <th>Open Hours</th>
                                            <th>Delivery Price</th>
                                            <th>Order Time</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var rest in Model.InactiveRestaurants)
                                        {
                                            <tr>
                                                <td>@rest.RestaurantName</td>
                                                <td>@rest.Location</td>
                                                <td>@rest.OpenHours</td>
