                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-warning btn-sm me-1" type="submit" title="Deactivate">
                                                            <i class="bi bi-x-circle"></i> Deactivate
                                                        </button>
                                                    </form>
                                                    <form asp-action="DeleteDeliveryMan" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="card-title mb-0">Inactive Delivery Men</h5>
                        </div>
                        <div class="card-body p-2">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Account Status</th>
                                            <th>User Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var del in Model.InactiveDeliveryMen)
                                        {
                                            <tr>
                                                <td>@del.AccountStatus</td>
                                                <td>@del.User.UserName</td>
                                                <td>@del.User.Email</td>
                                                <td>@del.User.PhoneNumber</td>
                                                <td class="text-center">
                                                    <form asp-action="ActivateDeliveryMen" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-success btn-sm me-1" type="submit" title="Activate">
                                                            <i class="bi bi-check-circle"></i> Activate
                                                        </button>
                                                    </form>
                                                    <form asp-action="DeleteDeliveryMan" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer tab -->
                <div class="tab-pane fade @(activeTab == "customer" ? "show active" : "")" id="customer" role="tabpanel" aria-labelledby="customer-tab">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Customers</h5>
                        </div>
                        <div class="card-body p-2">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>User Name</th>
                                            <th>Email</th>
                                            <th>Loyalty Points</th>
                                            <th>Total Orders</th>
                                            <th>Delivered Orders</th>
                                            <th>In Process Orders</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var customer in Model.Customers)
                                        {
                                            <tr>
                                                <td>@customer.UserName</td>
                                                <td>@customer.Email</td>
                                                <td>@customer.TotalOrders</td>
                                                <td>@customer.TotalDeliveredOrders</td>
                                                <td style="min-width:250px;">
                                                    @if (customer.InProcessOrders != null && customer.InProcessOrders.Any())
                                                    {
                                                        <ul class="mb-0 ps-3 order-item-list">
                                                            @foreach (var order in customer.InProcessOrders)
                                                            {
                                                                <li>
                                                                    <strong>Order Date:</strong> @order.OrderDate.ToShortDateString(),
                                                                    <strong>Total:</strong> @order.TotalPrice.ToString("C"),
                                                                    <strong>Status:</strong> @order.Status,
                                                                    <strong>Items:</strong> @string.Join(", ", order.OrderItems.Select(o => $"{o.itemName} (x{o.Quantity})"))
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                    else
                                                    {
                                                        <em>No In-Process Orders</em>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders tab -->
                <div class="tab-pane fade @(activeTab == "orders" ? "show active" : "")" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                    <div class="card shadow-sm">
                        <div class="orders-card-header">
                            <h5>Orders</h5>
                            <form method="get" asp-action="Dashboard" class="orders-filter-form">
                                <input type="hidden" name="activeTab" value="orders" />
                                <label asp-for="SelectedStatus" class="visually-hidden">Selected Status</label>
                                <select asp-for="SelectedStatus" asp-items="statusList"></select>
                                <button type="submit" class="btn btn-light btn-sm">Filter</button>
                            </form>
                        </div>
                        <div class="card-body p-2 table-responsive">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Customer Email</th>
                                        <th>Customer Phone</th>
                                        <th class="restaurant-id">Restaurant ID</th>
                                        <th>Order Number</th>
                                        <th>Order Date</th>
                                        <th>Status</th>
                                        <th>Order Total Price</th>
                                        <th>Order Items</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>@order.Customer.FirstName @order.Customer.LastName</td>
                                            <td>@order.Customer.Email</td>
                                            <td>@order.Customer.PhoneNumber</td>
                                            <td class="restaurant-id" title="@order.RestaurantID">@order.RestaurantID</td>
                                            <td>@order.OrderNumber</td>
                                            <td>@order.OrderDate.ToShortDateString()</td>
                                            <td>@order.Status</td>
                                            <td>@order.TotalPrice.ToString("C")</td>
                                            <td>
                                                <ul class="mb-0 ps-3 order-item-list list-unstyled">
                                                    @foreach (var item in order.OrderItems)
                                                    {
                                                        <li>
                                                            <div><strong>Item Name:</strong> @item.itemName</div>
                                                            <div><strong>Preferences:</strong> @item.Preferences</div>
                                                            <div><strong>Quantity:</strong> @item.Quantity</div>
                                                            <div><strong>Total Price:</strong> @item.TotalPrice.ToString("C")</div>
                                                        </li>
                                                    }
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Floating AI Chatbot Icon -->
                <button id="floatingChatBtn" title="Chat with AI"
                        class="btn btn-primary rounded-circle shadow position-fixed"
                        style="bottom: 20px; right: 20px; width: 50px; height: 50px; z-index: 1050;">
                    <i class="bi bi-robot" style="font-size: 1.5rem;"></i>
                </button>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const body = document.body;

    if (localStorage.getItem('darkMode') === 'enabled') {
        body.classList.add('dark-mode');
        darkModeToggle.textContent = '☀️ Light Mode';
    } else {
        darkModeToggle.textContent = '🌙 Dark Mode';
    }

    darkModeToggle.addEventListener('click', () => {
        body.classList.toggle('dark-mode');
        if (body.classList.contains('dark-mode')) {
            darkModeToggle.textContent = '☀️ Light Mode';
            localStorage.setItem('darkMode', 'enabled');
        } else {
            darkModeToggle.textContent = '🌙 Dark Mode';
            localStorage.setItem('darkMode', 'disabled');
        }
    });

    document.getElementById('logoutBtn').addEventListener('click', function () {
        fetch('@Url.Action("Logout", "Admin")', {
            method: 'POST',
            headers: {
                'RequestVerificationToken': '@requestVerificationToken',
                'Content-Type': 'application/json'
            },
            credentials: 'same-origin'
        })
        .then(response => {
            if (response.ok) {
                window.location.href = 'http://localhost:4200/home';
            } else {
                response.text().then(text => alert('Logout failed: ' + text));
            }
        })
        .catch(err => alert('Logout failed: ' + err.message));
    });

    document.getElementById('chatBtn').addEventListener('click', function () {
        window.location.href = '@Url.Action("AdminChat", "Admin")';
    });

    document.getElementById('floatingChatBtn').addEventListener('click', function () {
        window.location.href = '@Url.Action("AiChatBot", "Admin")';
    });
</script>
